<h1>Listing person_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Relationship distance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @person_categories.each do |person_category| %>
      <tr>
        <td><%= person_category.name %></td>
        <td><%= person_category.relationship_distance %></td>
        <td><%= link_to 'Show', person_category %></td>
        <td><%= link_to 'Edit', edit_person_category_path(person_category) %></td>
        <td><%= link_to 'Destroy', person_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

