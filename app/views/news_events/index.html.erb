<h1>Listing news_events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_events.each do |news_event| %>
      <tr>
        <td><%= news_event.title %></td>
        <td><%= news_event.description %></td>
        <td><%= news_event.date %></td>
        <td><%= link_to 'Show', news_event %></td>
        <td><%= link_to 'Edit', edit_news_event_path(news_event) %></td>
        <td><%= link_to 'Destroy', news_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New News event', new_news_event_path %>
